<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TandC">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="T&amp;C"
        android:textSize="30dp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_below="@id/txt1"
        android:layout_marginTop="8dp"
        android:text="Term &amp;Condition For Users"
        android:textAlignment="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt2"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="-38dp"
        android:background="@drawable/btn1"
        android:text="This is a Local Marketting app
        developed By Shubham kumar.this app provide you
        facilities to  shopping anything which is available in
        your nearest local market.and also take an information
        of price,quality of any meterial which rewuired to u
        available or not in maket. "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notes: This app is temporary not facilitate
        delivery of product.but in future it could be happen."
        android:layout_below="@+id/txt3"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/txt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Disclaimer:This app neither be responsible
        for any fault nor be developer.If in case anything fault please,
        comment me your advise,and I respect your advise.
        Thank   You."

        android:layout_below="@id/txt4"
        android:textSize="20dp"
        android:textColor="@color/accent"
        android:background="@drawable/btn1"/>

</RelativeLayout>